{{>navbar}}

<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md mt-2">
  <div class="flex justify-between items-start mb-2">
    <h1 class="text-3xl font-bold text-gray-800">{{ book.title }}</h1>
    {{#and user (eq user.role 2)}}
    <div class="flex gap-2">
      <a
        href="/books/{{book.id}}/edit"
        class="cursor-pointer text-gray-500 hover:text-blue-500 transition-colors" 
        title="Редактировать"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
      </a>
      <button 
        class="cursor-pointer text-gray-500 hover:text-red-500 transition-colors" 
        hx-delete="/books/{{book.id}}?redirect=true"
        hx-confirm="Книга будет удалена. Вы уверены?"
        title="Удалить"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
    {{/and}}
  </div>

  <p class="text-gray-600 mb-6 text-justify mt-6">{{ book.description }}</p>

  <div class="mb-4">
    <label class="font-semibold text-gray-700">Авторы: </label>
    <div class="flex flex-wrap gap-2 mt-1">
      {{#each book.authors}}
        <a href="/authors/{{ id }}" class="px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-sm">
          {{ this.name }}
        </a>
      {{/each}}
    </div>
  </div>

  <p class="text-gray-600">
    <span class="font-semibold">Страна:</span> {{ book.country }}
  </p>

  <p class="text-gray-600 mt-1">
    <span class="font-semibold">Год создания:</span> {{ book.yearCreated }}
  </p>

  <div class="mt-6">
    <a href="/books/{{ book.id }}/download" download 
        class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
      Скачать книгу
    </a>
  </div>
</div>
