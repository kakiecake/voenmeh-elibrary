<div
  id='author-selector-container'
  class='flex flex-col group relative mt-2'
  name='author'
>
  <div
    id='author-selector'
    class='flex flex-row flex-wrap items-center border border-grey-100 rounded-md py-1 px-2'
  >
    {{#each selectedAuthors}}
      <span
        key='{{id}}'
        class='selected-author-item rounded-lg bg-gray-100 border border-grey-300 px-2 py-.5 mr-2'
      >
        <input type='hidden' name='id' value='{{id}}' />
        <input type='hidden' name='name' value='{{name}}' />
        {{name}}
        <button
          class='remove-author'
          class='cursor-pointer'
          hx-on:click="removeAuthor('{{id}}')"
        >Ã—</button>
      </span>
    {{/each}}

    <input
      class='search-input peer rounded-md outline-none'
      type='text'
      id='author-search'
      name='q'
      placeholder='Search authors...'
      hx-get='/authors/search'
      hx-trigger='keyup changed delay:200ms'
      hx-target='#search-results'
      hx-vals='{"excludeIds": {{ json selectedIds }} }'
      hx-params='q, excludeIds'
      hx-swap='innerHTML'
    />
  </div>

  <div
    id='search-results'
    class='search-results hidden group-focus-within:block'
  ></div>
</div>
