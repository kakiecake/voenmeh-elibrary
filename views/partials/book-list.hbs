{{#and (eq books.length 0) (eq pagination.page 0)}}
  <div class="text-center text-gray-500 py-8">
    <h2 class="text-lg font-semibold mb-2">Ничего не найдено</h2>
    <p class="text-sm">Попробуйте изменить поисковый запрос или проверьте написание.</p>
  </div>
{{/and}}

{{#each books}}
  <li 
    key="{{ this.id }}"
    class="py-2 px-4 rounded-lg border border-gray-200 hover:border-blue-300 hover:shadow-md transition-all flex flex-row justify-between items-center"
  >
    <a href="/books/{{ this.id }}" class="flex flex-col w-full">
      <h2 class="text-gray-900 font-semibold mb-1">{{ this.title }}</h1>
      <div class="flex flex-row gap-1">
      {{#each authors}}
      <h3 class="text-xs">{{ this.name }}</h3>
      {{/each}}
      </div>
    </a>
    <div class="flex items-center gap-2">
      <div class="text-sm text-gray-500">{{ this.yearCreated }}</div>
      {{#if ../user }}
        {{>book_list_bookmark_button}}
        {{#if (eq ../user.role 2) }}
          <a
            class="cursor-pointer text-gray-500 hover:text-blue-500 transition-colors"
            href="/books/{{ id }}/edit"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
          </a>
          <button 
            class="cursor-pointer text-gray-500 hover:text-red-500 transition-colors"
            title="Удалить книгу"
            hx-target='li[key="{{ this.id }}"]'
            hx-swap="delete"
            hx-delete="/books/{{ this.id }}"
            hx-confirm='Книга "{{ this.title }}" будет удалена. Вы уверены?'
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </button>
        {{/if}}
      {{/if}}
    </div>
  </li>
{{/each}}

{{#if pagination.isEnd}}
  {{#if partial}}
    <button id="load-more-button" hx-swap-oob="delete"></button>
  {{/if}}
{{else}}
  <button 
    id="load-more-button"
    hx-swap-oob="true"
    class="cursor-pointer" 
    hx-get="/books"
    hx-vals='{ "q": "{{ query }}", "page": {{ pagination.nextPage }}, "partial": true }'
    hx-params="q, partial, page"
    hx-target="previous"
    hx-swap="afterend"
  >Еще</button>
{{/if}}
