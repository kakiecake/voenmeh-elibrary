{{>navbar}}

<form
  id='book-creation-form'
  class='flex flex-col border border-gray-300 rounded-lg p-6 w-full max-w-md mx-auto mt-8 space-y-4 shadow-md bg-white'
  hx-post="/books"
  hx-swap="outerHTML"
  hx-params="title, description, yearCreated, authorIds, countryCode, bookFile"
  hx-vals="js:{ authorIds: getAuthorIds() }"
  enctype="multipart/form-data"
>
  <h2 class='text-2xl font-bold text-gray-800 mb-4'>Добавить новую книгу</h2>
  
  <div class='space-y-2'>
    <label class='block text-sm font-medium text-gray-700'>Название</label>
    <input
      type='text'
      name='title'
      placeholder='Название книги'
      required
      class='h-11 w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
    />
  </div>

  <div class='space-y-2'>
    <label class='block text-sm font-medium text-gray-700'>Описание</label>
    <textarea
      name='description'
      placeholder='Описание книги'
      rows='4'
      class='w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
    ></textarea>
  </div>
  
  <div class='grid grid-cols-2 gap-4'>
    <div class='space-y-2'>
      <label class='block text-sm font-medium text-gray-700'>Год издания</label>
      <input
        name="yearCreated"
        type="number"
        placeholder="2023"
        min="0"
        max="2100"
        required
        class='w-full h-10 border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
      />
    </div>

    <div class='space-y-2'>
          <label class='block text-sm font-medium text-gray-700'>Страна</label>
          <select
            name="countryCode"
            class='w-full h-10 border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white'
            placeholder="Выберите страну"
            hx-validate="true"
            hx-on:change="this.setCustomValidity('')"
            hx-on:htmx:validation:validate="this.setCustomValidity(this.value === '' ? 'Необходимо выбрать другую страну' : '')"
          >
            <option value="">Выберите страну</option>
            {{#each countries}}
              <option value="{{ this.code }}">{{ name }}</option>
            {{/each}}
          </select>
        </div>
    </div>
  </div>

  <div class='space-y-2'>
    <label class='block text-sm font-medium text-gray-700'>Файл книги</label>
    <div 
      class='selectable mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md transition-colors duration-200 data-selected:border-blue-500 data-selected:bg-blue-50'
    >
      <div class='space-y-1 text-center'>
        <svg 
          class='selectable mx-auto h-11 w-12 text-gray-400 transition-colors duration-200 data-selected:text-blue-500'
          stroke='currentColor'
          fill='none'
          viewBox='0 0 48 48'
          aria-hidden='true'
        >
          <path d='M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' />
        </svg>
        <div class='flex text-sm text-gray-600'>
          <label for='bookFile' class='relative cursor-pointer rounded-md font-medium transition-colors duration-200 text-blue-600 hover:text-blue-500 focus-within:outline-none'>
            <span class="selectable data-selected:text-blue-700">Загрузите файл</span>
            <input 
              id='bookFile' 
              name='bookFile' 
              type='file' 
              accept='.pdf,.epub,.mobi,.txt' 
              hx-on:change="handleFileSelectorChanged(event)"
              class='sr-only' 
              required
            />
          </label>
          <p class='pl-1 selectable'>или перетащите его сюда</p>
        </div>
        <p 
          id='file-name'
          class='selectable text-xs font-medium text-gray-500 transition-colors duration-200 data-selected:text-blue-600'
        >PDF, EPUB, MOBI, или TXT до 10МБ</p>
        <div id='selected-file' class='hidden selectable text-sm font-medium text-blue-600'></div>
      </div>
    </div>
  </div>

  {{> author_selector}}

  <button
    type='submit'
    class='cursor-pointer w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 mt-4'
  >
    Добавить книгу
  </button>
</form>

<script>
  function getAuthorIds() {
    const ids = document
      .querySelectorAll('.selected-author-item > input[name="id"]')
      .values().map(x => parseInt(x.value)).toArray()
    return ids
  }

  function removeAuthor(id) { 
    document.querySelector(`.selected-author-item[key='${id}']`)?.remove();
  }

  function handleFileSelectorChanged(e) {
    const fileInput = e.target;
    const file = fileInput.files[0];
    const fileNameElement = document.getElementById('file-name');
    const selectedFileElement = document.getElementById('selected-file');
    
    if (file) {
      document.querySelectorAll('.selectable').forEach(x => x.setAttribute('data-selected', true));
      
      fileNameElement.classList.add('hidden');
      selectedFileElement.textContent = file.name;
      selectedFileElement.classList.remove('hidden');
    } else {
      document.querySelectorAll('.selectable').forEach(x => x.removeAttribute('data-selected'));
      fileNameElement.classList.remove('hidden');
      selectedFileElement.classList.add('hidden');
    }
  }
</script>
